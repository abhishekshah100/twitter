extends layouts/login-layout.pug

block content 
    .loginContainer 
        h1 Login
        p.errorMessage #{errorMessage}
        form(action="", method="post") 
            input(type="text", name="loginUsername" placeholder="Username or Email", value=loginUsername required="")
            input(type="password", name="logPassword", placeholder="Password")
            input(type="submit", value="Login")
        a(href="/register") Need an account? Register Here. 